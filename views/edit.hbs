<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-3">
                {{> dashboard}}
            </div>
            <div class="col-12 col-lg-9">
                <h4>Редактирование профиля</h4>
                <form action="/change_profile" method="POST">
                    <div class="form-group">
                        <label for="inputFirstname">Ваше имя:</label>
                        <input type="text" class="form-control" id="inputFirstname" name="firstname" value="{{data.firstname}}" required>
                    </div>
                    <div class="form-group">
                        <label for="inputSurname">Ваша фамилия:</label>
                        <input type="text" class="form-control" id="inputSurname" name="surname" value="{{data.surname}}" required>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail">Email:</label>
                        <input type="email" class="form-control" id="inputEmail" name="email" value="{{data.email}}" required>
                    </div>
                    <button type="submit" class="btn btn-success">Сохранить изменения</button>
                </form>
            </div>
        </div>
    </div>
</div>